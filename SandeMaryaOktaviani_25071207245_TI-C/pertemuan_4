print("=== Program Menghitung Belah Ketupat ===")

while True:
    try:
        d1 = float(input("Masukkan panjang diagonal 1: "))
        d2 = float(input("Masukkan panjang diagonal 2: "))
        sisi = float(input("Masukkan panjang sisi: "))
        
        if d1 <= 0 or d2 <= 0 or sisi <= 0:
            print("Semua nilai harus lebih dari 0. Silakan input ulang.\n")
            continue
        
        luas = 0.5 * d1 * d2
        keliling = 4 * sisi
        
        print("\nHasil Perhitungan:")
        print(f"Luas belah ketupat     : {luas}")
        print(f"Keliling belah ketupat : {keliling}")
        
        break
    
    except ValueError:
        print("Input tidak valid. Masukkan angka yang benar.\n")
